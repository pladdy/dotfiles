#!/usr/bin/env bash

set -eu

WORKING_DIR=$(cd $(dirname $0) && pwd)

##
# assumes homebrew is installed by running install
##
brew install openssl pipx

make poetry

# install pipx utilities
for package in black flake8 httpie-jwt-auth pandoc pyls rst2html5 virtualenv; do
  pipx uninstall $package
  pipx install $package
done

# atom.io package linter-rst expects a 'rst2html' command; linke to rst2html5
ln -sf /usr/local/bin/rst2html5 /usr/local/bin/rst2html
